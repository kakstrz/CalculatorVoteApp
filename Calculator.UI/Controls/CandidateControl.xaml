<UserControl x:Class="Calculator.UI.Controls.CandidateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="200" Width="200" Height="220">
    <Border BorderBrush="LightCoral" BorderThickness="1" CornerRadius="20">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="28" Text="{Binding Name}" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" FontSize="20" Text="{Binding Party}" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            
        </Grid>
    </Border>
</UserControl>
